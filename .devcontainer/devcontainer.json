{
  "name": "FastAPI DevContainer",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "api",
  "workspaceFolder": "/workspace/backend",
  "postCreateCommand": "pip install -r ../requirements.txt",
  "forwardPorts": [8000],
  "remoteUser": "root",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ]
}
